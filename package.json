  "main": "src/server.ts",
  "scripts": {
    "dev": "pnpm --filter server dev",
    "db:migrate": "pnpm --filter server exec ts-node src/db/migrate.ts",
    "db:push": "pnpm exec dotenv -e .env -- drizzle-kit push --config ./server/drizzle.config.ts",
